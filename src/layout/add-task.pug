.bs-component.add-task-container.white-bg(data-bind="visible: currentPage() == 'add-task'")
    .add-task-container
        form.add-task(data-bind='submit: createTask')
            h3.heading Add task
            label(for='task-name') Task title
            input#task-name(required='', placeholder='Walk the dog')
            label(for='tasklist-id') Tasklist
            select#tasklist-id(required='', data-bind='foreach: allTasklists')
                option(data-bind='attr: {value: tasklistId}, text: tasklistName')
            .actions
                button(type='submit') SAVE